<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:color="@color/black">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:thickness="0dp">
            <corners android:radius="5dp"/>
            <solid android:color="@color/gray6"/>
        </shape>
    </item>
    <item android:state_selected="true" android:color="@color/white">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:thickness="0dp" android:color="@color/orange">
            <corners android:radius="5dp"/>
            <solid android:color="@color/orange"/>
        </shape>
    </item>
</selector>